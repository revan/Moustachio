{
  "name": "Moustachio",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Moustachios your Wikipedia.",
  "homepage_url": "http://github.com/revan/Moustachio",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "permissions": [
    "http://*.wikipedia.org/*"
  ],
  "content_scripts": [
    {
      "matches": [
		"http://*.wikipedia.org/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}
